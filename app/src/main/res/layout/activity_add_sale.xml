<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="@color/lightwhite"
        android:gravity="center">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F10A0A"
            android:padding="2dp"

            android:fitsSystemWindows="true">

            <ImageView
                android:id="@+id/left_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/left_arrow"
                android:maxWidth="25dp"


                android:textColor="@color/white"
                android:textSize="20dp"

                android:textStyle="italic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="ADD SALE"
                android:textColor="#E6E2E2"
                android:layout_gravity="center_horizontal"
                android:textSize="30dp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>



        <EditText
            android:id="@+id/sale_title"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn"
            android:ems="8"
            android:hint="  Sale title"
            android:inputType="textPersonName"
            android:elevation="5dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/sale_desc"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:hint="  sale description"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn"
            android:ems="8"
            android:elevation="5dp"
            android:inputType="textPersonName"/>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/iv"
                android:layout_width="85dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:background="@color/white"
                android:maxWidth="25dp"

                android:text="Add Image"
                android:textColor="@color/white"
                android:textSize="20dp"

                android:textStyle="italic" />


            <Button
                android:id="@+id/addimage"
                android:layout_width="90dp"
                android:layout_marginTop="5dp"
                android:layout_height="50dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/joinbtn"
                android:text="UPLOAD"


                />


        </LinearLayout>

        <TextView
            android:layout_width="240dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="products"
            android:id="@+id/prod_list"
            >

        </TextView>


        <Button
            android:id="@+id/choose_prod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="45dp"
            android:ems="10"
            android:textStyle="bold"
            android:background="@drawable/joinbtn"
            android:text="CHOOSE PRODUCTS"
            android:onClick="addRecord"
            android:textColor="#fff"/>

        <EditText
            android:id="@+id/start_date"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn"
            android:drawableRight="@drawable/cal"
            android:hint="   sale starts "
            android:focusableInTouchMode="false"

            />
        <EditText
            android:id="@+id/end_date"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:drawableRight="@drawable/cal"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn"
            android:hint="   sale ends "
            android:focusableInTouchMode="false"

            />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            >

            <Button
                android:id="@+id/add_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="25dp"
                android:ems="10"
                android:textStyle="bold"
                android:background="@drawable/joinbtn"
                android:text="ADD SALE"
                android:onClick="addRecord"
                android:textColor="#fff"/>


            <Button
                android:id="@+id/p_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="230dp"
                android:background="@drawable/joinbtn"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:onClick="addRecord"
                android:text="CANCEL"
                android:textColor="#fff"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>