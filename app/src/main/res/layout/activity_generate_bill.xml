<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".sale_report2">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C51717"
        android:padding="2dp"

        android:fitsSystemWindows="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text=" BILL.. "

            android:textColor="#E6E2E2"
            android:layout_gravity="left"
            android:textSize="30dp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text=" ORDER  "

        android:textColor="#000000"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="AMOUNT "

        android:textColor="#000000"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/lv_bill"
        android:layout_width="match_parent"

        android:layout_height="400dp"
        android:layout_marginTop="90dp"
        android:background="@color/white"


        android:elevation="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text=" Total:"

        android:textColor="#000000"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:layout_marginStart="45dp"

        android:layout_below="@+id/lv_bill"
        android:layout_marginTop="5dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text=" Del. Amt:"

        android:textColor="#000000"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:layout_marginStart="20dp"

        android:layout_below="@+id/lv_bill"
        android:layout_marginTop="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text=" GST:"

        android:textColor="#000000"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:layout_marginStart="55dp"

        android:layout_below="@+id/lv_bill"
        android:layout_marginTop="75dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text=" SUB TOTAL:"

        android:textColor="#000000"
        android:layout_gravity="left"
        android:textSize="18sp"
        android:layout_marginStart="10dp"

        android:layout_below="@+id/lv_bill"
        android:layout_marginTop="115dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tot_amount2"


        android:text=" tot "

        android:textColor="#000000"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:layout_marginStart="130dp"
        android:layout_below="@+id/lv_bill"
        android:layout_marginTop="5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/del_amount2"


        android:text=" del_a "

        android:textColor="#000000"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:layout_marginStart="130dp"
        android:layout_below="@+id/lv_bill"
        android:layout_marginTop="40dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gst_amount2"


        android:text=" gst_a  "

        android:textColor="#000000"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:layout_marginStart="130dp"
        android:layout_below="@+id/lv_bill"
        android:layout_marginTop="75dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/hline"
        android:layout_width="match_parent"
        android:layout_height="5dp"


        android:layout_marginTop="105dp"
        android:layout_below="@+id/lv_bill"



        android:background="@drawable/hline"
        android:layout_marginStart="5dp"

        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sub_total2"


        android:text=" sub_total  "

        android:textColor="#000000"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:layout_marginStart="130dp"
        android:layout_below="@+id/lv_bill"
        android:layout_marginTop="115dp"
        android:textStyle="bold" />



</RelativeLayout>