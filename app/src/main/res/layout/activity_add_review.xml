<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_review"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C51717"
        android:padding="2dp"

        android:fitsSystemWindows="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="   Write a Review "

            android:textColor="#E6E2E2"
            android:layout_gravity="left"
            android:textSize="30dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <RatingBar
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="95dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/ratingbar"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="165dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:hint="ratecount"
        android:id="@+id/ratecount"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:background="@drawable/btn2"
        android:layout_centerHorizontal="true"
        android:hint="Write a Review.."
        android:id="@+id/comment"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="SUBMIT"
        android:id="@+id/submit"
        android:layout_marginTop="270dp"
        android:background="@drawable/joinbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="345dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:hint="ratecount"
        android:id="@+id/showrating"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="500dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:hint="product_id"
        android:id="@+id/pid"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="580dp"
        android:visibility="gone"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:hint="userid"
        android:id="@+id/uid"/>

</RelativeLayout>

