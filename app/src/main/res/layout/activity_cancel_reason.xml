<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".return_reason">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C51717"
        android:padding="2dp"

        android:fitsSystemWindows="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="  CANCEL "

            android:textColor="#E6E2E2"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="  REASON FOR CANCEL  "

        android:textColor="#373535"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="      Why do you want to cancel order?  "

        android:textColor="#373535"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:layout_marginTop="110dp"
        android:textStyle="bold" />






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="  CHOOSE PAYMENT METHOD  "

        android:textColor="#373535"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="200dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="100dp"
        android:elevation="5dp"

        android:background="@drawable/btn"

        android:orientation="vertical"
        >

        <RadioGroup
            android:id="@+id/radiogroup_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"


            android:focusable="true"
            android:orientation="vertical"

            >

            <RadioButton
                android:id="@+id/rad_accident"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:checked="true"
                android:text="  Accidental Order  "
                android:textColor="#575757"
                android:textSize="22dp" />


            <RadioButton
                android:id="@+id/rad_better"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Better price available"
                android:textColor="#575757"
                android:textSize="22dp" />

            <RadioButton
                android:id="@+id/rad_dam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Product damaged"
                android:textColor="#575757"
                android:textSize="22dp" />

            <RadioButton
                android:id="@+id/rad_dif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Different product"
                android:textColor="#575757"
                android:textSize="22dp" />

            <RadioButton
                android:id="@+id/rad_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Size or color issue"
                android:textColor="#575757"
                android:textSize="22dp" />

            <RadioButton
                android:id="@+id/rad_oth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Other"
                android:textColor="#575757"
                android:textSize="22dp" />


        </RadioGroup>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Rs.500"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="580dp"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="5dp"
        android:visibility="gone"


        />


    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:duplicateParentState="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/joinbtn"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="630dp"
        android:paddingRight="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:text="CANCEL"
        android:visibility="visible"/>





</RelativeLayout>