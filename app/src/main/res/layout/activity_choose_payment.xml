<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".choose_payment">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C51717"
        android:padding="2dp"

        android:fitsSystemWindows="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="  CHOOSE PAYMENT "

            android:textColor="#E6E2E2"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="  CHOOSE PAYMENT METHOD  "

        android:textColor="#373535"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold" />







    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="  CHOOSE PAYMENT METHOD  "

        android:textColor="#373535"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="200dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:padding="10dp"
        android:background="@drawable/btn"

        android:orientation="vertical"
        >

        <RadioGroup
            android:id="@+id/radiogroup_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"


            android:focusable="true"
            android:orientation="vertical"

            >

            <RadioButton
                android:id="@+id/rad_upi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:checked="true"
                android:text="UPI Payment  "
                android:textColor="#575757"
                android:textSize="22dp" />


            <RadioButton
                android:id="@+id/rad_COD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="CASH ON DELIVERY"
                android:textColor="#575757"
                android:textSize="22dp" />


        </RadioGroup>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="  Total amount  "

            android:textColor="#373535"
            android:layout_gravity="left"
            android:textSize="15dp"
            android:layout_marginTop="90dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_amount"


            android:text="  total amount  "

            android:textColor="#373535"
            android:layout_gravity="left"
            android:textSize="15dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="90dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="  Delivery chaarge  "

            android:textColor="#373535"
            android:layout_gravity="left"
            android:textSize="15dp"
            android:layout_marginTop="120dp"

            android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="  Free  "

                android:textColor="#373535"
                android:layout_gravity="left"
                android:textSize="15dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="120dp"
                android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="  GST "

            android:textColor="#373535"
            android:layout_gravity="left"
            android:textSize="15dp"
            android:layout_marginTop="150dp"

            android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gst_val"


                android:text="  5% "

                android:textColor="#373535"
                android:layout_gravity="left"
                android:textSize="15dp"
                android:layout_marginTop="150dp"
                android:layout_marginStart="180dp"

                android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="  SUB TOTAL "

            android:textColor="#373535"
            android:layout_gravity="left"
            android:textSize="15dp"
            android:layout_marginTop="200dp"
            android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub_total"


                android:text="  SUB TOTAL1 "

                android:textColor="#373535"
                android:layout_gravity="left"
                android:textSize="15dp"
                android:layout_marginTop="200dp"
                android:layout_marginStart="180dp"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Rs.500"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="580dp"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="5dp"
        android:visibility="gone"


        />


    <Button
        android:id="@+id/bt_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:duplicateParentState="true"
        android:layout_centerHorizontal="true"
        android:background="#F44336"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="630dp"
        android:paddingRight="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:text="PAY"
        android:visibility="visible"/>





</RelativeLayout>