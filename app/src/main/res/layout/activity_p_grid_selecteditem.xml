<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".p_grid_selecteditem"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:fillViewport="true"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@color/lightwhite"
            >


            <ImageView
                android:id="@+id/img_prod"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:elevation="10dp"
                android:layout_margin="2dp"
                android:background="@drawable/btn"
                >

            </ImageView>


            <TextView
                android:id="@+id/category"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="280dp"
                android:layout_marginEnd="53dp"
                android:layout_marginRight="40dp"

                android:drawableLeft="@drawable/tag"
                android:hint="category"
                android:textAlignment="center"

                android:textColor="#675E5E"

                android:textSize="22sp" />


            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="330dp"
                android:layout_marginEnd="53dp"
                android:layout_marginRight="40dp"

                android:fontFamily="sans-serif-medium"
                android:hint="size chart"
                android:textAlignment="center"

                android:textColor="#6E6D6D"

                android:textSize="22sp" />

            <TextView
                android:id="@+id/p_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="260dp"
                android:layout_marginTop="300dp"
                android:layout_marginEnd="53dp"
                android:layout_marginRight="40dp"
                android:hint="pid"

                android:textAlignment="center"

                android:textSize="23sp"
                 />
            <TextView
                android:id="@+id/u_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="250dp"
                android:layout_marginTop="260dp"
                android:layout_marginEnd="53dp"
                android:layout_marginRight="40dp"
                android:hint="uid"

                android:textAlignment="center"

                android:textSize="23sp"
                 />


            <TextView

                android:id="@+id/p_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginTop="460dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="53dp"
                android:text="this section includes details of product above.....       "
                android:textColor="#423F3F"
                android:textSize="23sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/p_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="230dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="43dp"
                android:fontFamily="sans-serif-black"

                android:hint="p_name"
                android:textColor="@color/black"
                android:textSize="22sp" />




            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="230dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="43dp"
                android:drawableLeft="@drawable/rupees"
                android:hint="price"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/hline"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginStart="33dp"

                android:layout_marginTop="380dp"
                android:layout_marginEnd="0dp"

                android:layout_marginRight="0dp"
                android:background="@drawable/hline"

                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginTop="420dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="43dp"
                android:text="PRODUCT DESCRIPTION  "
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />


            <TextView

                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginTop="620dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="43dp"
                android:text="quantity"
                android:textColor="#424040"
                android:textSize="23sp"
                android:textStyle="normal" />
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/qty"
                android:layout_marginTop="620dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="43dp"
                android:text="items left       "
                android:textColor="#424040"
                android:textSize="23sp"
                android:textStyle="normal" />

            <TextView

                android:id="@+id/prod_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginTop="890dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="43dp"
                android:focusable="false"
                android:text="Write a Review...       "
                android:textColor="#424040"
                android:textSize="23sp"
                android:textStyle="normal" />

            <ListView
                android:id="@+id/lvcreview"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_marginTop="930dp">

            </ListView>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/add_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dp"
        android:layout_marginStart="10dp"

        android:ems="10"
        android:textStyle="bold"
        android:background="@color/orange"
        android:text="ADD TO CART"

        android:textColor="#fff"/>




</RelativeLayout>
