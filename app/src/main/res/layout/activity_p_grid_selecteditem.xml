<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".p_grid_selecteditem"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:fillViewport="true"

        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:scrollbars="vertical"
            android:background="@color/lightwhite"
            >


            <ImageView
                android:id="@+id/img_prod"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:elevation="10dp"
                android:layout_margin="2dp"
                android:background="@drawable/btn"
                >

            </ImageView>


            <TextView
                android:id="@+id/category"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="280dp"
                android:layout_marginEnd="53dp"
                android:layout_marginRight="40dp"

                android:drawableLeft="@drawable/tag"
                android:hint="category"
                android:textAlignment="center"

                android:textColor="#675E5E"

                android:textSize="22sp"
                android:visibility="gone"/>
            <TextView

                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="290dp"
                android:layout_marginEnd="53dp"
                android:layout_marginRight="40dp"


                android:text="SIZE CHART:"
                android:textStyle="bold"
                android:textAlignment="center"
                android:fontFamily="sans-serif-medium"
                android:textColor="#675E5E"

                android:textSize="16sp"
               />


            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="330dp"
                android:layout_marginEnd="53dp"
                android:layout_marginRight="40dp"

                android:fontFamily="sans-serif-condensed"
                android:hint=" size "
                android:background="@drawable/btn"
                android:drawableRight="@drawable/down_arrow"
                android:textAlignment="center"

                android:textColor="#6E6D6D"

                android:textSize="22sp" />

            <TextView

                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="380dp"
                android:layout_marginEnd="53dp"
                android:layout_marginRight="40dp"


                android:text="QUANTITY:"
                android:textStyle="bold"
                android:textAlignment="center"

                android:textColor="#675E5E"

                android:textSize="16sp"
                />

            <Button
                android:id="@+id/dec"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="420dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn"
                android:elevation="20dp"


                android:fontStyle="italic"
                android:text="-"
                android:textColor="@android:color/black"
                android:textSize="12sp"

                />

            <TextView
                android:id="@+id/tv_qty_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="420dp"
                android:layout_marginBottom="10dp"
                android:fontStyle="italic"
                android:textSize="18dp"
                android:layout_toEndOf="@+id/dec"
                />
            <Button
                android:id="@+id/inc"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:textColor="@android:color/black"
                android:background="@drawable/btn"
                android:elevation="20dp"
                android:text="+"
                android:textSize="12sp"
                android:layout_toEndOf="@+id/tv_qty_value"
                android:layout_toRightOf="@+id/tv_qty_value"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="420dp"
                android:layout_marginBottom="10dp"
                android:fontStyle="italic"
               />

            <TextView
                android:id="@+id/p_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"

                android:layout_marginStart="260dp"
                android:layout_marginTop="300dp"
                android:layout_marginEnd="53dp"
                android:layout_marginRight="40dp"
                android:hint="pid"

                android:textAlignment="center"

                android:textSize="23sp"
                 />
            <TextView
                android:id="@+id/u_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"

                android:layout_marginStart="250dp"
                android:layout_marginTop="340dp"
                android:layout_marginEnd="53dp"
                android:layout_marginRight="40dp"
                android:hint="uid"

                android:textAlignment="center"

                android:textSize="23sp"

                 />



            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_marginStart="10dp"
                android:layout_marginTop="210dp"
                android:stepSize="0"
                android:id="@+id/rating_item"
                android:visibility="gone"
                android:numStars="5"
                android:rating="3"
                />
            <TextView
                android:id="@+id/rating_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="210dp"

                android:fontFamily="sans-serif-medium"
                android:background="@drawable/btn2"
                android:padding="2dp"

                android:hint="1.0"
                android:textColor="@color/black"
                android:drawableRight="@drawable/star"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/p_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="230dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="43dp"
                android:fontFamily="sans-serif-black"

                android:hint="p_name"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="230dp"
                android:layout_marginTop="210dp"


                android:text="0"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/off"
                android:layout_marginStart="0dp"
                android:id="@+id/tv_off"

                android:layout_marginTop="210dp"



                android:text="% OFF"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="18sp" />




            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="230dp"
                android:layout_marginTop="240dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="43dp"
                android:drawableLeft="@drawable/rup8"

                android:hint="price"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp" />



            <View
                android:id="@+id/divider5"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_marginTop="480dp"

                android:background="#E1DDDD" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="485dp"
                android:background="@drawable/btn">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"

                android:text="PRODUCT DESCRIPTION  "
                android:id="@+id/pro_desc_tv"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

                <TextView

                    android:id="@+id/p_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="41dp"
                    android:layout_below="@+id/pro_desc_tv"
                    android:layout_marginRight="53dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="textStart"
                    android:text="this section includes  product above....this section includes details of product .....       "
                    android:textColor="#423F3F"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </RelativeLayout>


            <TextView

                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="600dp"


                android:text="quantity"
                android:fontFamily="sans-serif-medium"
                android:textColor="#424040"
                android:textSize="14sp"
                android:textStyle="normal" />
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/qty"
                android:layout_marginTop="600dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="43dp"
                android:text=" items left       "
                android:textColor="#424040"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textStyle="normal" />
            <View
                android:id="@+id/div6"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="630dp"

                android:background="#E1DDDD" />
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="640dp"
                android:layout_marginStart="5dp"
                android:text="  7 Days Return policy "
                android:drawableLeft="@drawable/return_arrow"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textStyle="normal" />
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="670dp"
                android:layout_marginStart="5dp"
                android:text="  Free Delivery "
                android:drawableLeft="@drawable/ship_blue"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"
                android:textSize="14sp"
                android:textStyle="normal" />
            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="705dp"
                android:layout_marginStart="5dp"
                android:text=" Ratings &amp; Reviews "
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:textSize="23sp"
                android:textStyle="normal" />

            <TextView

                android:id="@+id/prod_review"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="705dp"
                android:fontFamily="sans-serif-black"
                android:focusable="false"

                android:text="Rate product"
                android:background="@drawable/btn2"
                android:textColor="#3989ED"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="normal" />

            <TextView

                android:id="@+id/viewall_rev"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginStart="5dp"

                android:layout_marginTop="740dp"
                android:fontFamily="sans-serif-medium"
                android:focusable="false"
                android:background="@drawable/btn2"
                android:padding="3dp"
                android:layout_marginRight="5dp"

                android:drawableRight="@drawable/arrow_right"

                android:text="  View all"

                android:textColor="@color/black"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:layout_centerHorizontal="true"
                android:textStyle="normal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:layout_marginTop="780dp">
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

            <ListView
                android:id="@+id/lv_review"
                android:elevation="5dp"
                android:layout_margin="3dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:smoothScrollbar="true"
                android:scrollingCache="false"
                android:layout_marginTop="0dp"/>
                </ScrollView>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1000dp"
                android:id="@+id/reviews_lin"
                android:orientation="vertical"/>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/add_whishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dp"
        android:layout_marginStart="10dp"

        android:ems="10"
        android:textStyle="bold"
        android:background="@drawable/joinbtn"
        android:text="ADD TO WISHLIST"

        android:textColor="#fff"/>

    <Button
        android:id="@+id/add_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/add_whishlist"


        android:ems="10"
        android:textStyle="bold"
        android:background="@drawable/joinbtn"
        android:text="ADD TO CART"

        android:textColor="#fff"/>






</RelativeLayout>
