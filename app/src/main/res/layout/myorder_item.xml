<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn"
    android:elevation="5dp"
    android:layout_margin="6dp"
    android:padding="10dp"

    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/img_product"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:requiresFadingEdge="horizontal"


        android:background="@color/lightwhite"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"

        />




    <TextView
        android:id="@+id/prod_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"




        android:layout_marginStart="150dp"
        android:text="prod name"


        android:textColor="#474646"
        android:fontFamily="sans-serif-medium"
        android:textSize="16sp"
        android:elevation="5dp"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ordeid"

        android:layout_marginStart="130dp"
        android:layout_marginTop="8dp"

        android:layout_marginRight="35dp"
        android:fontFamily="sans-serif-medium"

        android:text="order id:"
        android:textAlignment="center"
        android:textColor="#616060"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_ordeid"


        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:layout_marginRight="35dp"
        android:fontFamily="sans-serif-medium"

        android:text="order id"
        android:textAlignment="center"
        android:textColor="#636161"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/cart_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:layout_marginStart="340dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:fontFamily="sans-serif-medium"

        android:text="cartid"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/o_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="260dp"
        android:layout_marginTop="12dp"


        android:fontFamily="sans-serif-medium"

        android:text="date"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/u_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:layout_marginStart="340dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:fontFamily="sans-serif-medium"

        android:text="name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="340dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone"

        android:text="phon"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:layout_marginStart="340dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:fontFamily="sans-serif-medium"

        android:text="addr"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />




    <TextView
        android:id="@+id/pid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="300dp"
        android:layout_marginTop="8dp"

        android:fontFamily="sans-serif-medium"
        android:visibility="gone"

        android:text="pid"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="300dp"
        android:layout_marginTop="37dp"
        android:visibility="gone"


        android:fontFamily="sans-serif-medium"

        android:text="uid"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:layout_marginStart="300dp"
        android:layout_marginTop="57dp"


        android:fontFamily="sans-serif-medium"

        android:text="pin"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:layout_marginStart="150dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:fontFamily="sans-serif-medium"

        android:text="price"
        android:drawableLeft="@drawable/rupees"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/c_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:layout_marginStart="150dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:fontFamily="sans-serif-medium"

        android:text="size"

        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <TextView
    android:id="@+id/qty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginStart="250dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="35dp"
    android:layout_marginRight="35dp"
    android:fontFamily="sans-serif-medium"
        android:visibility="gone"

    android:text="qty"
    android:textAlignment="center"
    android:textColor="@color/black"
    android:textSize="16sp" />
    <TextView
        android:id="@+id/del_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="250dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone"

        android:text="delamt"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="150dp"
        android:layout_marginTop="70dp"

        android:layout_marginRight="35dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"

        android:text="status"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/p_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="250dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone"

        android:text="pmode"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/p_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="250dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone"

        android:text="cat"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="300dp"
        android:layout_marginTop="120dp"
        android:visibility="gone"


        android:fontFamily="sans-serif-medium"

        android:text="total "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp" />









</RelativeLayout>
