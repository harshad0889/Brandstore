<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn"
    android:elevation="5dp"

    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C51717"
        android:padding="2dp"

        android:fitsSystemWindows="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="   ORDERS "

            android:textColor="#E6E2E2"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"



            android:padding="5dp"
            android:requiresFadingEdge="horizontal"
            app:srcCompat="@mipmap/ic_launcher"

            />


        <TextView
            android:id="@+id/prod_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="150dp"


            android:layout_marginTop="40dp"
            android:elevation="5dp"
            android:textAllCaps="true"



            android:fontFamily="monospace"
            android:text="prod name"
            android:textColor="#6E6868"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/order_id_tv"


            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:fontFamily="sans-serif-medium"

            android:text="order id"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="150dp"
            android:layout_marginTop="12dp"


            android:fontFamily="sans-serif-medium"

            android:text="order id"
            android:id="@+id/order_id_tv"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cart_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:layout_marginStart="340dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:fontFamily="sans-serif-medium"

            android:text="cartid"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn2"
            android:elevation="5dp">

            <TextView
                android:id="@+id/u_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"

                android:fontFamily="sans-serif-medium"

                android:text="name"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"

                android:layout_marginTop="50dp"
                android:drawableLeft="@drawable/location"
                android:fontFamily="sans-serif-medium"

                android:text="addr"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/address"

                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-medium"

                android:text="phon"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="30dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="20dp"


                android:fontFamily="sans-serif-medium"

                android:text="pin"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="60dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone"

            android:text="User name:"

            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="65dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:fontFamily="sans-serif-medium"

            android:text="Phone no:"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:fontFamily="sans-serif-medium"

            android:text="SHIPPING ADDRESS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/pid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:layout_marginStart="300dp"
            android:layout_marginTop="8dp"

            android:fontFamily="sans-serif-medium"


            android:text="pid"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="300dp"
            android:layout_marginTop="37dp"
            android:visibility="gone"


            android:fontFamily="sans-serif-medium"

            android:text="uid"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />



        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="70dp"
            android:layout_marginTop="250dp"


            android:fontFamily="sans-serif-medium"

            android:text="Pincode:"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="150dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:drawableLeft="@drawable/rupees"

            android:fontFamily="sans-serif-medium"
            android:text="price"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/c_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/size_tv"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"

            android:text="size"

            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="280dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/size_tv"

            android:text="size:"

            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/qty_tv"

            android:layout_marginStart="3dp"
            android:layout_marginTop="70dp"
            android:fontFamily="sans-serif-medium"

            android:text="qty"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <View
            android:id="@+id/divider5"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginTop="120dp"

            android:background="@android:color/secondary_text_dark_nodisable" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="280dp"
            android:layout_marginTop="70dp"
            android:fontFamily="sans-serif-medium"

            android:text="Qty:"
            android:id="@+id/qty_tv"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginTop="310dp"

            android:fontFamily="sans-serif-medium"

            android:text="PAYMENT INFORMATION"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn2"
            android:elevation="5dp"
            android:layout_marginTop="340dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"

                android:text="Delivery Amt:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/del_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="150dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"

                android:text="delamt"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-medium"

                android:text="Payment:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/p_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-medium"

                android:text="pmode"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="30dp"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif-medium"

                android:text="Order status:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:drawableRight="@drawable/down_arrow"
                android:layout_marginStart="150dp"
                android:layout_marginTop="80dp"
                android:elevation="4dp"
                android:fontFamily="sans-serif-medium"


                android:text="status "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="30dp"
                android:layout_marginTop="110dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="italic"

                android:text="*You can update order status here:"
                android:textAlignment="center"
                android:textColor="#676565"
                android:textSize="10sp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="30dp"
                android:layout_marginTop="135dp"
                android:fontFamily="sans-serif-medium"

                android:text="Order Date:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/o_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="150dp"
                android:layout_marginTop="135dp"
                android:fontFamily="sans-serif-medium"

                android:text="date"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/tv_reason"
                android:layout_marginTop="160dp"
                android:layout_marginBottom="10dp"

                android:fontFamily="sans-serif-medium"

                android:text="reason"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_marginTop="160dp"
                android:layout_marginBottom="10dp"

                android:fontFamily="sans-serif-medium"

                android:text="Order cancelled due to"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/ret_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"

                android:layout_marginTop="180dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/tv_ret_reason"

                android:fontFamily="sans-serif-medium"

                android:text="reason"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_ret_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"

                android:layout_marginTop="180dp"
                android:layout_marginBottom="10dp"

                android:fontFamily="sans-serif-medium"

                android:text="Order returned due to"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_marginTop="520dp">
            <TextView
                android:id="@+id/bill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/arrow_right"


                android:textStyle="normal"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn2"
                android:elevation="5dp"
                android:padding="5dp"

                android:fontFamily="sans-serif-medium"

                android:text="INVOICE "

                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/track_ord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:drawableRight="@drawable/arrow_right"


                android:textStyle="normal"
                android:layout_marginStart="5dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/btn2"
                android:elevation="5dp"

                android:fontFamily="sans-serif-medium"

                android:text="TRACK ORDER "

                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="14sp" />


        </RelativeLayout>














        <TextView
            android:id="@+id/p_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="150dp"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone"

            android:text="cat"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="180dp"
            android:layout_marginTop="510dp"


            android:fontFamily="sans-serif-medium"

            android:text="total "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="14sp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="update"
            android:background="@drawable/joinbtn"

            android:layout_marginTop="630dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/bt_ustatus"



            >

        </Button>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_track"

            android:layout_marginStart="20dp"
            android:layout_marginTop="700dp"


            android:fontFamily="sans-serif-black"

            android:text="TRACK ORDER "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp" />
        <ListView
            android:id="@+id/lv_status"
            android:elevation="5dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tv_track"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:scrollbars="vertical"

            android:smoothScrollbar="true"
            android:scrollingCache="false"
            android:layout_marginTop="0dp"/>
    </RelativeLayout>
    </ScrollView>


</RelativeLayout>
